<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	
>
	<Dialog
		id="editDialog"
		title="{i18n>Editar cliente}"
	>
		<beginButton>
			<Button
				text="{i18n>Salvar}"
				type="Accept"
				press="handleSaveBtnPressEdit"
			/>
		</beginButton>
		<endButton>
			<Button
				text="{i18n>Cancelar}"
				type="Reject"
				press="handleCancelBtnPressEdit"
			/>
		</endButton>
		<f:SimpleForm
			id="editForm"
			editable="true"
		>
			<f:content>
				<Label text="{i18n>Nome}"/>
				<Input 
				id="nameClientEdit"
					value="{EditFragmentModel>/Nome}"
					required="true"
				/>
				<Label  text="{i18n>EndereÃ§o}"/>
				<Input
				id="addressClientEdit"
				value="{EditFragmentModel>/Endereco}"
				required="true"
				/>	

				<Label  text="Telefone"/>
				<MaskInput
				id="phoneClientEdit"
				value="{EditFragmentModel>/Telefone}"
				mask="(99) 9 9999 9999"
				required="true"
				/>

			</f:content>
		</f:SimpleForm>
	</Dialog>
</c:FragmentDefinition>