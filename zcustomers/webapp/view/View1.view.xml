<mvc:View
    controllerName="zcustomers.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    displayBlock="true">
    <Page
        id="page"
        title="{i18n>title}">
        <content>
            <!-- SmartFilterBar -->
            <smartFilterBar:SmartFilterBar
                id="idSmartFilterBar"
                entitySet="ZRDWGP_TRANS_REQUEST_HEADER"
                liveMode="true">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration
                        id="_IDGenControlConfiguration"
                        key="TransportRequest"
                        label="Solicitação de Transporte"
                        mandatory="false" />
                </smartFilterBar:controlConfiguration>
            </smartFilterBar:SmartFilterBar>

            <!-- Toolbar acima da lista -->
            <Toolbar id="_IDGenToolbar">
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <Button id="_IDGenButton"
                    icon="sap-icon://create-form"
                    text="{i18n>register}"
                    tooltip="{i18n>register}"
                    press="onCreateCustomer" />
                <Button id="_IDGenButton1"
                    icon="sap-icon://request"
                    text="{i18n>update}"
                    tooltip="{i18n>update}"
                    press="onUpdateCustomer" />
                <Button id="_IDGenButton2"
                    icon="sap-icon://delete"
                    text="{i18n>delete}"
                    tooltip="{i18n>delete}"
                    press="onDeleteCustomer" />
                <Button id="_IDGenButton3"
                    icon="sap-icon://detail-more"
                    text="Detalhes"
                    tooltip="Detalhes"
                    press="onNavToSecPage" />
            </Toolbar>

            <!-- Lista vinculada ao entitySet -->
            <List
                id="list"
                items="{
                    path: '/ZRDWGP_TRANS_REQUEST_HEADER',
                    templateShareable: false
                }">
                <StandardListItem id="_IDGenStandardListItem1"
                    title="{TransportRequest}"
                    description="{CustomerDescription}"
                    info="{Status}"
                    infoState="Success"
                    type="Active"
                    press="onNavToSecPage" />
            </List>
        </content>
    </Page>
</mvc:View>