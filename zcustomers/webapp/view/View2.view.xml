<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="60%"
    controllerName="zcustomers.controller.View2">
    <Page id="_IDGenPage"
        title="Items da solicitação de transporte">
        <content>
            <Table
                id="itemsTable"
                items="{
                    path: 'ItemsModel>/',
                    templateShareable: false
                }">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Lista de Itens" />
                        <ToolbarSpacer />
                        <Button
                            text="Atualizar"
                            icon="sap-icon://refresh"
                            press="onRefresh" />
                        <Button
                            text="Exportar"
                            icon="sap-icon://download"
                            press="onExport" />
                        <Button
                            text="Voltar"
                            icon="sap-icon://nav-back"
                            press="onBack" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText" text="ID Para Sol. Transp" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText1" text="Documento SD" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText2" text="Item" />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text id="_IDGenText3" text="Material" />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Text id="_IDGenText4" text="Texto breve material" />
                    </Column>
                    <Column id="_IDGenColumn6">
                        <Text id="_IDGenText5" text="Quantidade Sol. Mat" />
                    </Column>
                    <Column id="_IDGenColumn7">
                        <Text id="_IDGenText6" text="Peso bruto" />
                    </Column>
                    <Column id="_IDGenColumn8">
                        <Text id="_IDGenText7" text="Unidade de Medida" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                        <cells>
                            <Text id="_IDGenText8" text="{ItemsModel>TransportRequest}" />
                            <Text id="_IDGenText9" text="{ItemsModel>Delivery}" />
                            <Text id="_IDGenText10" text="{ItemsModel>DeliveryItem}" />
                            <Text id="_IDGenText11" text="{ItemsModel>Material}" />
                            <Text id="_IDGenText12" text="{ItemsModel>MaterialDescription}" />
                            <Text id="_IDGenText13" text="{ItemsModel>MaterialQuantity}" />
                            <Text id="_IDGenText14" text="{ItemsModel>GrossWeight}" />
                            <Text id="_IDGenText15" text="{ItemsModel>UnitMeasure}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>